{% load static %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{% static 'css/main.css' %}">
    <link rel="stylesheet" href="{% static 'css/detail.css' %}">
    <link rel="stylesheet" href="{% static 'css/asside.css' %}">
    <title>ArmCoders</title>
</head>
<body>
    <header>
        {% include "project/header.html.twig" %}
    </header>
    <div class="main container">
        <div class="home ">
            <div class="detail">
                {% for item in context.post %}
                    <div class="about_img">
                         <img class="img" src="{{ item.img.url }}" alt="">
                    </div>
                    <h2 style="color: white;margin-top: 10px;">{{ item.name }}</h2>
                    <img class="img_1" src="{{ item.img_1.url }}" alt="">
                    <div class="detail_about_text">
                        <p style="font-size: 18px">{{ item.about }}</p>
                        <p style="margin-top: 10px;">{{ item.about_detail }}</p>
                    </div>
                    <div class="download">
                        <div class="download_header">
                            <img src="{% static "images/download.png" %}" alt="">
                            <p>Ներբեռնել</p>
                        </div>
                        <div class="download_body">
                            <div class="download_body_btn">
                                <a  href="{{item.link.url}}" download>
                                    <img class="icon"  src="{% static "images/download1.png" %}" alt="">
                                    <p >Ներբեռնել</p>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="comment">
                    <div class="comment_header">
                        <img class="icon" src="{% static "images/com.png" %}" alt="">
                        <p>Թողնել Մեկնաբանություն</p>
                    </div>
                    <div class="comment_body">
                         <form action="" method="post">
                            {% csrf_token %}
                            {{ context.form }}
                            <input class="input_btn" type="submit" value="Ավելացնել">
                         </form>
                    </div>
                </div>
            </div>
        </div>
         <div id="menu" class="asside">
            <div class="categories">
                <h2 style="color: white;margin-left: 10px;margin-bottom: 10px;">Կատեգորիաներ</h2>
                <div class="border"></div>
                {% for item in context.categories %}
                    <div class="category_box">
                        <img src="{{ item.img.url }}" alt="">
                        <a href="{% url 'categories' item.id %}">{{ item.name}}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div id="menu_btn" class="menu_burger blobmenu ">
            <img id="open" src="{% static "images/menu.png" %}" alt="">
{#            <img id="close" style="width: 50px;height: 50px;" src="{% static "images/close.png" %}" alt="">#}
        </div>

    </div>
    <footer>
        {% include "project/footer.html.twig" %}
    </footer>
    <script src="{% static "js/main.js" %}"></script>
</body>
</html>